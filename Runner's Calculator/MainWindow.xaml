            <ComboBoxItem Content="Miles" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="Kilometers" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="Meters" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="Yards" HorizontalAlignment="Left" Width="92"/>
        </ComboBox>
        <Label x:Name="lblPer" Content="Per" HorizontalAlignment="Left" Margin="51,182,0,0" VerticalAlignment="Top" FontFamily="Tahoma"/>
        <ComboBox x:Name="cmbPace" HorizontalAlignment="Left" Margin="128,184,0,0" VerticalAlignment="Top" Width="87">
            <ComboBoxItem Content="Mile" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="Kilometer" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="800 M" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="400 M" HorizontalAlignment="Left" Width="92"/>
            <ComboBoxItem Content="200 M" HorizontalAlignment="Left" Width="92"/>
        </ComboBox>
    </Grid>
</Window>